

<div class="row">
  <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
      <div class="box">
          <div class="box-icon">
            <img class="blog-img" src="<%= blog.escape("filepicker_url") %>" alt="" />
          </div>
          <div class="info">
            <h4 class="text-center"><%= blog.get("title") %></h4>
              <p>by: <%= blog.escape("author") %></p>
              <% if(blog.escape("user_id") != Grumblr.currentUser.id){ %>
                <a href="" class="follow btn"
                data-follow-state="<%= blog.get("followed") === true ? "following" : "unfollowed" %>"
                ><%= blog.get("followed") === true ? "Unfollow" : "Follow" %></a>
              <% } %>
          </div>
      </div>
  </div>
</div>

