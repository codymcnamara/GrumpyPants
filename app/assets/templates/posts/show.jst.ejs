<div class="row">
  <div class="col-md-3">
    <div class="row">
      <div class="col-sm-4 col-md-offset-8">
        <div class="post-img">
          <% if (post.escape("post_url")) { %>
            <img src="<%= post.escape("post_url") %>" alt="" />
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-5">
    <div class="post-box">
      <div class="row">
        <div class="post-title col-sm-10 col-sm-offset-1">
          <strong><%= post.get("title") %></strong>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
          Post Body: <%= post.escape("body") %>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <% if (post.escape("body")) { %>
    <div class="col-md-6 col-md-offset-3">

    </div>
  <% } %>
</div>
