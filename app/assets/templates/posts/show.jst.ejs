<div class="row total-post">
  <div class="col-md-3">
    <div class="row">
      <div class="col-sm-4 col-md-offset-8">
        <div class="post-img">
          <% if (post.escape("post_url")) { %>
            <img src="<%= post.escape("post_url") %>" alt="" />
          <% } %>
        </div>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="post-box">
      <div class="row post-inner-buffer">
        <div class="post-title col-sm-10 col-sm-offset-1">
          <%= post.get("title") %>
        </div>
        <div class="post-img img-responsive">
          <% if (post.escape("post_url")) { %>
            <img src="<%= post.escape("post_url") %>" alt="" class="img-rounded"/>
          <% } %>
        </div>
      <% if (post.escape("body")) { %>
          <div class="col-sm-10 col-sm-offset-1">
            <%= post.escape("body") %>
          </div>
      <% } %>
    </div>
  </div>

</div>
