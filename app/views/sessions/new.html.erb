<img class="bg" src="http://fc00.deviantart.net/fs70/i/2011/204/7/f/rain_over_window_by_kurodot-d41dh9d.jpg" alt="" />

<div class="row">
  <div class="col-md-2 col-md-offset-10 col-sm-2 col-sm-offset-10 col-xs-2 col-xs-offset-10">
    <div class="login-signup-button">
      <a href="/users/new" class="btn btn-lg btn-success">Sign up</a>
    </div>
  </div>
</div>


<div class="container login-container">

  <div class="row title-row">
    <div class="col-md-8 col-md-offset-2 web-title">
      GrumpyPants
    </div>
  </div>

  <div class="row site-description">
    <div class="col-md-6 col-md-offset-3 site-description-first-line">
      A Tumblr clone exclusively for complaining.
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 subtitle-description">
        <span class="subtitle-span">It's okay.</span> <span>Let it out :)</span>
      </div>
    </div>
  </div>

  <%= render "shared/errors" %>

  <div class="row form-container">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <form action="<%= session_url %>" method="post">
          <input
            type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">

          <div class="form-group">
            <input type="text"
                  name="user[username]"
                  id="user_username"
                  placeholder="username"
                  class="form-control">
          </div>

          <div class="form-group">
            <input type="password"
                  name="user[password]"
                  class="form-control"
                  id="user_password"
                  placeholder="password">
          </div>

          <input class="btn btn-lg btn-primary btn-block"
                type="submit" id="login" value="Login Â»">

          <input class="btn btn-lg btn-success btn-block guest-login"
                type="submit" value="Login As Guest">

        </form>
      </div>
  </div>

</div>


<script charset="utf-8">
  $('.guest-login').on('click', signInGuest)

  function signInGuest(event){
    event.preventDefault();
    $('#user_username').val('Grumpy_Guest');
    $('#user_password').val('password');
    $('#login').trigger('click');
  }

</script>
